<div class="container">
    <h3>Ingresar Promocion</h3>
    <form action="/formUpdRegisterPromo" method="POST">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="nombrepromocion">Nombre promoción</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="text" name="nombrepromocion" id="nombrepromocion" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="descripcion">Descripcion</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <textarea name="descripcion" id="descripcion" cols="30" rows="10" class="form-control" required></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="feccaducidad">Fecha finaliza promoción</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="datetime-local" name="feccaducidad" id="feccaducidad" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="price">Precio</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="number" name="price" id="price" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group text-right">
            <input type="submit" class="btn btn-success" value="Guardar">
        </div>
    </form>
</div>