<% include ../partials/header %>
<div class="container">
    <h3>Ingresar Promocion</h3>
    <form action="/formRegisterPromo" method="POST">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="nombrepromocion">Nombre promoci√≥n</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="text" name="nombrepromocion" id="nombrepromocion" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="descripcion">Descripcion</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <textarea name="descripcion" id="descripcion" cols="30" rows="10" class="form-control" required></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="price">Precio</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="number" name="price" id="price" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <label for="habilitado">
                        <input id="checked" type="checkbox" name="habilitado" id="habilitado" class="form-check-input"> Habilitar Promocion
                    </label>    
                </div>
            </div>
        </div>
        <div class="form-group text-right">
            <input type="submit" class="btn btn-success" value="Guardar">
        </div>
    </form>
</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
<script>
    function onReady(){
        $('#checked').on('click', function(){
            if( $(this).val() == 'true'){
                $(this).attr("value",false);
            }else {
                $(this).attr("value",true);
            }
        })
    }
    $(document).ready(onReady);
</script>