<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
<% if(messages.length > 0) { %>
<p>mensaje: <strong><%= messages%></strong>
<% } %>
</p>
<div class="container">
    <div class="row">
        <div class="panel-default">
            <div class="panel-heading">
                <a href="/formAddRegisterPromo" class="btn btn-primary">Nuevo</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel-default">
            <div class="panel-heading">
                <h3>Promociones Vigentes</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel-default">
            <div class="panel-heading">
                <strong>Ordenar por:</strong>
                <span class="pull-right">
                    <a href="">Activos |</a>
                    <a href="">Desactivos</a>
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <% if(regs.length > 0) {%>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Promoción</th>
                            <th>Descripción</th>
                            <!-- <th>Fec. Creación</th> -->
                            <th>Precio (S/.)</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                            <% regs.forEach(function(reg){ %>
                                <tr>
                                    <td><%=reg.nombrepromocion %></td>
                                    <td><%= reg.descripcion %></td>
                                    <!-- <td><%= reg.feccreacion %></td> -->
                                    <td><%= reg.price %></td>
                                    <% if( reg.habilitado ) {%>
                                        <td> Promoción Activa</td>
                                    <% } else {%>
                                        <td> Promoción Desactiva</td>
                                    <% } %>
                                    <td>
                                        <a href="/promocion/editar/<%= reg.id %>" class="btn btn-warning">Editar</a> &nbsp;&nbsp;
                                        <a href="/promocion/<%= reg.id%>/eliminar" class="btn btn-danger">Eliminar</a>
                                    </td>
                                </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                        <img src="/images/monkey-notprom.png" alt="">
                <% }%>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script
  src="https://code.jquery.com/jquery-1.12.4.min.js"
  integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
  crossorigin="anonymous"></script>
<script src="/js/library/noty.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-noty/2.4.1/jquery.noty.js"></script>
<script>
if(typeof jQuery != 'undefined'){
    new Noty({
        type: 'success', //alert, success, warning, error, info
        theme: 'relax',
        layout: 'topRight',
        text: 'Some notification text',
        animation: {
            open: 'animated slideInDown', // in order to use this you'll need animate.css
            close: 'animated bounceOutRight',
            easing: 'swing',
            speed: 5
        }
}).show();
}
</script>