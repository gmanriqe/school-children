<div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Editar Cita</h3>
                </div>
                <div class="panel-body">
                        <form action="/citaspa/<%= regs.id %>/actualizar" method="POST">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-4 col-md-2">
                                        <label for="horarecojo">Fecha y Hora de Recojo</label>
                                    </div>
                                    <div class="col-xd-8 col-md-10">
                                        <input type="datetime-local" name="horarecojo" id="horarecojo" class="form-control" value="<%= regs.horarecojo %>"required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-4 col-md-2">
                                        <label for="pet">Nombre Mascota</label>
                                    </div>
                                    <div class="col-xd-8 col-md-10">
                                        <input type="text" name="pet" id="pet" class="form-control" value="<%= regs.pet.id %>"required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-4 col-md-2">
                                        <label for="nombrepromocion">Promoci√≥n</label>
                                    </div>
                                    <div class="col-xd-8 col-md-10">
                                        <select name="promocion" id="promocion"  class="form-control">
                                            <% proms.forEach(function(prom){%>
                                            <option value="<%= prom.id %>"><%= prom.nombrepromocion %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <input type="submit" class="btn btn-success" value="Guardar">
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>