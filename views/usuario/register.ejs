<div class="container">
    <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">
                    <h3>Registrar Usuario</h3>
                </div>
                <div class="panel-body">
                    <form action="/formuser" method="POST">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="tipousuario">Tipo Usuario</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <select name="tipousuario" id="tipousuario" class="form-control">
                                        <option value="em">Empleado</option>
                                        <option value="ve" selected>Veterinario</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="nombre">Nombre</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="text" class="form-control" name="nombre" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="fecnacimiento">Fecha Nacimiento</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="date" class="form-control" name="fecnacimiento" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="dni">Dni</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="text" name="dni" id="dni" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="telefono">Telefono</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="text" name="telefono" id="telefono" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <fieldset>
                        <legend>Rellenar solamente si es empleado</legend>
                        <div class="form-group">     
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="usuario">Usuario</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="text" name="usuario" id="usuario" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="contrasena">contrasena</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="password" name="contrasena" id="contrasena" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        </fieldset>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="habilitado">Habilitado</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="checkbox" id="habilitado" name="habilitado" checked>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success pull-right" value="Grabar">   
                        </div>                           
                    </form>
                </div>
            </div>
    </div>
</div>