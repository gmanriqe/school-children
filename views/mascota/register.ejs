<div class="container">
    <div class="row">
        <div class="panel-default">
            <div class="panel-heading">
                <a href="/formtipomascota" class="btn btn-primary">+ Tipo Mascota</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Registrar Mascota</h3>
            </div>
            <div class="panel-body">
                <form action="/formregisterpet" method="POST">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-4 col-md-2">
                                <label for="tipomascota">Tipo de mascota</label>
                            </div>
                            <div class="col-xd-8 col-md-10">
                                <select name="tipomascota" id="tipomascota" class="form-control">
                                    <% regs.forEach(function(reg){%>
                                    <option value="<%= reg.id %>"><%= reg.nombre %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-4 col-md-2">
                                <label for="nombre">Nombre</label>
                            </div>
                            <div class="col-xd-8 col-md-10">
                                <input type="text" name="nombre" id="nombre" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-4 col-md-2">
                                <label for="raza">Raza</label>
                            </div>
                            <div class="col-xd-8 col-md-10">
                                <input type="text" name="raza" id="raza" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4 col-md-2">
                                    <label for="fecregistro">Fecha registro</label>
                                </div>
                                <div class="col-xd-8 col-md-10">
                                    <input type="date" name="fecregistro" id="fecregistro" class="form-control" required>
                                </div>
                            </div>
                        </div>
                    <div class="form-group text-right">
                        <input type="submit" class="btn btn-success" value="Guardar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>